<%layout('../layout')%>
<!-- Page Content -->
<input type="hidden" id="token" value=<%=token%> />
<script src="/js/admin/vote.js"></script>
<script src="/js/admin/voteManager.js"></script>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">투표관리</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Vote
                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" id="btn-votesearch" class="btn btn-default btn-xs  btn-success">조회</button>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <input type="text" id="vName" />
                            <input type="button" class="btn btn-xs btn-primary" id="btn-addVote" value="추가">
                            <br>
                            <br>
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>name</th>
                                    </tr>
                                </thead>
                                <tbody id="votelist">
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Candidate
                        </div>
                        <div class="panel-body">
                            
                            <div class="form-group">
                                <label>투표명</label>
                                <p class="form-control-static" id="votename"></p>
                                <input type="hidden" id="voteseq" />
                            </div>
                            
                            <div class="form-group">
                                <label>후보명</label>
                                <input type="text" id="candidate-name" />
                            </div>
                            <div class="form-group">
                                <label>이미지경로</label>
                                <input type="text" id="candidate-imgPath" />
                            </div>
                            <input type="button" class="btn btn-primary" id="btn-addCandidate" value="추가">
                            
                            <input type="button" class="btn btn-primary" id="btn-getCandidate" value="조회">
                            
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 70px;">
                                                name
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 100px;">
                                                imgPath
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="candidate-tbody">
                                    </tbody>
                                </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

<!-- /#page-wrapper -->
